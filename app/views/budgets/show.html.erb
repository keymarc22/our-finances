<%= turbo_frame_tag 'modal' do %>
  <div class="mb-5 flex flex-col space-y-1.5 text-start sm:text-left">
    <h2 class="text-lg font-semibold leading-none tracking-tight">Edit budget</h2>
    <p class="text-xs text-muted-foreground">
      Set a new amount for your budget. Adjusting your budget helps you manage your expenses effectively.
    </p>
  </div>

  <%= simple_form_for @budget do |f| %>
    <%= render partial: 'form', locals: { f: f }%>

    <div class="flex justify-end gap-1">
      <%= render ButtonComponent.new(text: 'Cancel', theme: :secondary, "data-action": "click->modal#close") %>

      <%= render ButtonComponent.new(text: 'Edit', theme: :primary, type: 'submit') %>
    </div>

  <% end %>
<% end %>