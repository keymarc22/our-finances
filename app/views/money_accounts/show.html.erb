<%= turbo_frame_tag 'modal' do %>
  <div class="mb-5 flex flex-col space-y-1.5 text-start sm:text-left">
    <h2 class="text-lg font-semibold leading-none tracking-tight">Edit account</h2>
    <p class="text-xs text-muted-foreground">
      Update your money account details to keep your finances organized.
    </p>
  </div>

  <%= simple_form_for @money_account do |f| %>
    <%= render partial: 'form', locals: { f: f }%>

    <div class="flex justify-end gap-1">
      <%= render ButtonComponent.new(theme: :secondary, text: 'Cancel', "data-action": "click->modal#close") %>

      <%= render ButtonComponent.new(theme: :primary, text: 'Edit', type: 'submit') %>
    </div>
  <% end %>
<% end %>