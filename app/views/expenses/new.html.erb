<%= turbo_frame_tag 'modal' do %>
  <div class="mb-5 flex flex-col space-y-1.5 text-start sm:text-left">
    <h2 class="text-lg font-semibold leading-none tracking-tight">Register new expense</h2>
    <p class="text-xs text-muted-foreground">
      Register a new shared or personal expense.
    </p>
  </div>

  <%= simple_form_for @expense, html: { data: { controller: 'expense-form' } } do |f| %>
    <%= render partial: 'form', locals: { f: f }%>

    <div class="flex justify-end gap-1">
      <%= render ButtonComponent.new(theme: :secondary, text: 'Cancel', attrs: { "data-action": "click->modal#close" }) %>

      <%= render ButtonComponent.new(theme: :primary, text: 'Add expense', attrs: { type: 'submit' }) %>
    </div>

  <% end %>
<% end %>