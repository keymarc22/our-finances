<%= turbo_frame_tag 'modal' do %>
  <div class="mb-5 flex flex-col space-y-1.5 text-start sm:text-left">
    <h2 class="text-lg font-semibold leading-none tracking-tight">Add product</h2>
  </div>

  <div data-controller="barcode-scanner">
    <div id="reader" data-barcode-scanner-target="scanner" data-input="store_item_barcode" data-submit="false" class="grid justify-center viewport hidden"></div>

    <div data-barcode-scanner-target="toggable">
      <%= simple_form_for @store_item do |f| %>
        <%= render partial: 'form', locals: { f: f } %>

        <%= f.simple_fields_for :item_prices do |item_price_fields| %>
          <%= render partial: 'item_price_fields', locals: { f: item_price_fields } %>
        <% end %>

        <div class="flex justify-end gap-1 mt-6">
          <%= render ButtonComponent.new(text: 'Cancel', theme: :secondary, "data-action": "click->modal#close") %>

          <%= render ButtonComponent.new(text: 'Add', theme: :primary, type: 'submit') %>
        </div>
      <% end %>
    </div>
  </div>


<% end %>