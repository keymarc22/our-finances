<%= turbo_frame_tag 'modal' do %>
  <div class="mb-5 flex flex-col space-y-1.5 text-start sm:text-left">
    <h2 class="text-lg font-semibold leading-none tracking-tight">Agregar grupo de gastos</h2>
    <p class="text-xs text-muted-foreground">
      Agrupa gastos relacionados y establece un presupuesto para controlar tus finanzas de manera efectiva.
    </p>
  </div>

  <%= simple_form_for @transaction_group do |f| %>
    <%= render partial: 'form', locals: { f: f }%>

    <div class="flex justify-end gap-1">
      <%= render ButtonComponent.new(theme: :secondary, text: 'Cancel', "data-action": "click->modal#close") %>

      <%= render ButtonComponent.new(theme: :primary, text: 'Add group', type: 'submit') %>
    </div>
  <% end %>
<% end %>