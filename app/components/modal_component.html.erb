<div class="fixed inset-0 z-50 flex items-center justify-center overlay-bg <%= @klass %>"
     style="z-index: 10000;"
     data-controller="modal"
     data-modal-target="modal"
     data-action="turbo:frame-load->modal#open turbo:submit-end->modal#close">

  <div class="bg-white rounded-lg shadow-lg w-full h-full relative 
              max-w-full sm:max-w-md
              sm:h-auto 
              sm:max-h-[90vh] 
              mx-auto my-0 sm:my-8 
              p-0 overflow-hidden">

    <div class="p-6 h-full overflow-y-auto">

      <%= render ButtonComponent.new(theme: :ghost, icon: 'x', klass: "cursor-pointer absolute top-2 right-2 text-gray-500 hover:text-gray-800", "data-action": "click->modal#close" ) %>

      <% if content.present? %>
        <%= content %>
      <% else %>
        <%= turbo_frame_tag 'modal'%>
      <% end %>
    </div>
  </div>
</div>